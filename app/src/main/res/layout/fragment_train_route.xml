<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface_background"
    tools:context="com.bebraradar.ui.screens.TrainRouteFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mapCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_collapsed_height"
        android:layout_marginStart="@dimen/page_padding"
        android:layout_marginTop="@dimen/map_collapsed_top_margin"
        android:layout_marginEnd="@dimen/page_padding"
        android:clipToOutline="true"
        app:cardBackgroundColor="@color/surface_card"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:cardElevation="@dimen/card_elevation_small">

        <FrameLayout
            android:id="@+id/mapFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <org.osmdroid.views.MapView
                android:id="@+id/liveMapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/mapTopBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/backToResultsButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_chip"
                    android:contentDescription="@string/action_back"
                    android:padding="10dp"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/routeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/route_screen_title"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        tools:text="Live Tracking" />

                    <TextView
                        android:id="@+id/routeSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/route_screen_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        tools:text="Bandra Terminus to Ahmedabad" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/shareRouteButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_chip"
                    android:contentDescription="@string/action_share"
                    android:padding="10dp"
                    android:src="@drawable/ic_share" />

                <ImageButton
                    android:id="@+id/collapseMapButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_chip"
                    android:contentDescription="@string/map_collapse_hint"
                    android:padding="10dp"
                    android:src="@drawable/ic_map_collapse"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mapExpandHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_chip"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="6dp"
                android:paddingEnd="16dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/mapHintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/map_expand_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/mapTapOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/routeBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/page_padding"
        android:layout_marginEnd="@dimen/page_padding"
        android:layout_marginBottom="@dimen/page_padding"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/bottom_sheet_peek_expanded"
        app:cardBackgroundColor="@color/surface_card"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:cardElevation="12dp"
        app:strokeColor="@color/surface_card_border"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <View
                android:layout_width="64dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_bottom_sheet_handle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/routeTrainName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Karnavati Express" />

                    <TextView
                        android:id="@+id/routeTrainNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        tools:text="Train No. — 12933" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/refreshRouteButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_chip"
                    android:contentDescription="@string/action_refresh"
                    android:padding="10dp"
                    android:src="@drawable/ic_refresh" />
            </LinearLayout>

            <TextView
                android:id="@+id/routeRunsStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/success_green"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Runs Daily" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/routeDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="11:00" />

                    <TextView
                        android:id="@+id/routeDepartureMeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="01 Nov, Mon · Bandra Terminus" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/bg_timeline_dot_primary" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/bg_timeline_line" />

                    <View
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/bg_timeline_dot_grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/routeArrival"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="04:35" />

                    <TextView
                        android:id="@+id/routeArrivalMeta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textAlignment="textEnd"
                        tools:text="02 Nov, Tue · Ahmedabad Jn" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/routeDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                tools:text="Duration 17h 35m" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/routeStopsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_route_stop" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
